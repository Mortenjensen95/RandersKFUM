<Page x:Class="RandersKFUM.View.BookingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RandersKFUM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookingView">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Kalender og valgmenuer -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Vælg dato" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
            <Calendar SelectedDate="{Binding SelectedDate}" />

            <TextBlock Text="Vælg tidsrum" Margin="0,20,0,5" />
            <ComboBox ItemsSource="{Binding TimeSlots}" SelectedItem="{Binding SelectedTimeSlot}" />

            <TextBlock Text="Vælg varighed (minutter)" Margin="0,20,0,5" />
            <ComboBox ItemsSource="{Binding Durations}" SelectedItem="{Binding SelectedDuration}" />

            <TextBlock Text="Vælg omklædningsrum" Margin="0,20,0,5" />
            <ComboBox ItemsSource="{Binding LockerRooms}" SelectedItem="{Binding SelectedLockerRoom}" 
                      DisplayMemberPath="LockerRoomNumber">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding LockerRoomNumber}" 
                                   Foreground="{Binding IsAvailable, Converter={StaticResource BoolToBrushConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- Visualisering af baner -->
            <TextBlock Text="Vælg bane" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Grid.Column="1" HorizontalAlignment="Center"/>
            <!-- Bane 1 -->
            <Button Content="Bane 1" Width="100" Height="50" Grid.Column="1"
                        Background="{Binding Fields[0].IsAvailable, Converter={StaticResource BoolToBrushConverter}}"
                        Command="{Binding SelectFieldCommand}" 
                        CommandParameter="{Binding Fields[0]}" Margin="201,185,300,215" />

            <!-- Multi -->
        <Button Content="Multi" Width="100" Height="50" Grid.Column="1"
                        Background="{Binding Fields[1].IsAvailable, Converter={StaticResource BoolToBrushConverter}}"
                        Command="{Binding SelectFieldCommand}" 
                        CommandParameter="{Binding Fields[1]}" Margin="61,190,440,210" />

            <!-- Bane 2 -->
        <Button Content="Bane 2" Width="100" Height="50" Grid.Column="1"
                        Background="{Binding Fields[2].IsAvailable, Converter={StaticResource BoolToBrushConverter}}"
                        Command="{Binding SelectFieldCommand}" 
                        CommandParameter="{Binding Fields[2]}" Margin="325,290,176,110" />

            <!-- Bane 3 -->
        <Button Content="Bane 3" Width="100" Height="50" Grid.Column="1"
                        Background="{Binding Fields[3].IsAvailable, Converter={StaticResource BoolToBrushConverter}}"
                        Command="{Binding SelectFieldCommand}" 
                        CommandParameter="{Binding Fields[3]}" Margin="240,95,261,305" />

            <!-- Bane 4 -->
        <Button Content="Bane 4" Width="100" Height="50" Grid.Column="1"
                        Background="{Binding Fields[4].IsAvailable, Converter={StaticResource BoolToBrushConverter}}"
                        Command="{Binding SelectFieldCommand}" 
                        CommandParameter="{Binding Fields[4]}" Margin="375,200,126,200" />
        <Button Content="Bane 5" Width="100" Height="50" Grid.Column="1"
                        Background="{Binding Fields[5].IsAvailable, Converter={StaticResource BoolToBrushConverter}}"
                        Command="{Binding SelectFieldCommand}" 
                        CommandParameter="{Binding Fields[5]}" Margin="375,95,126,305" />


        <!-- Knapper til handling -->
        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20">
            <Button Content="Book" Width="80" Height="35" Margin="0,0,10,0" Command="{Binding ConfirmBookingCommand}" />
            <Button Content="Cancel" Width="80" Command="{Binding NavigateBackCommand}" />
        </StackPanel>
    </Grid>

</Page>
